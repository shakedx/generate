<Window x:Class="dayntypoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dayntypoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800"
        Background="Aqua">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.ColumnSpan="2" Content="Generate" FontSize="20" Margin="10 10 10 10" Click="Button_Click"/>
        <TextBlock Grid.Row="1" Margin="10" 
                   Background="White" x:Name="Result" />
        <StackPanel Grid.Row="1" x:Name="Patterns" Grid.Column="1"
                    Margin="10" Orientation="Vertical" HorizontalAlignment="Left"/>
    </Grid>
</Window>
